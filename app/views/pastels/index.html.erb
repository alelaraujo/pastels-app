<div class="container">
  <h1 class="text-center">Welcome to Pastels</h1>
  <div class="row d-flex justify-content-center">
    <div class="cards">
      <% @pastels.each do |pastel| %>
      <div class="card m-2" style="width: 18rem;">
        <%= link_to pastel, class: 'btn' do %>
        <%= cl_image_tag pastel.photo, class: 'card-img-top' %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= pastel.name %></h5>
          <div class="d-flex justify-content-between">
            <p class="card-text"><%= pastel.description %></p>
            <p class="card-text float-right">â‚¬ <%= pastel.price %></p>
          </div>
        </div>
        <div class="d-flex justify-content-between align-items-center m-2">
          <%= link_to 'Details', pastel, class: 'btn btn-outline-secondary' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>







<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-5">
      <h2 class="mb-3 text-center">You're almost there...here is your order</h2>
      <table class="table">
        <thead>
          <th scope="col">Pastel</th>
          <th scope="col">Qty</th>
        </thead>
        <tbody>
          <tr>
            <td><%= @order.pastel.name %></td>
            <td><%= @order.quantity %></td>
          </tr>
          <tr>
            <td>Total: â‚¬ <%= @order.pastel.price * @order.quantity %></td>
          </tr>
        </tbody>
      </table>
      <div class="text-center">
        <%= link_to 'Update Order', edit_order_path(@order), class: 'btn btn-outline-secondary btn-sm' %>
        <% if DateTime.now > @order.order_date %>
        <%= link_to 'Review', review_order_path(@order), class: 'btn btn-outline-secondary btn-sm' %>
        <% else %>
        <%= link_to 'Review', review_order_path(@order), class: 'btn btn-outline-secondary btn-sm disabled' %>
        <% end %>
      </div>
    </div>
  </div>
</div>



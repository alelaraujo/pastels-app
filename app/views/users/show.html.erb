<!-- User Dashboard -->


<div class="accordion" id="accordionExample">
  <div class="card">
    <div class="card-header" id="headingOne">
      <h2 class="mb-0">
        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          <i class="fas fa-caret-down"></i> Profile
        </button>
      </h2>
    </div>

    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
      <div class="card-body">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %><br>
        <label>Name:</label> <%= "#{@user.first_name} #{@user.last_name}" %><br>
        <label>Email:</label> <%= @user.email %>
      </div>
    </div>
  </div>
  <div class="card">
    <div class="card-header" id="headingTwo">
      <h2 class="mb-0">
        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
          <i class="fas fa-caret-down"></i> My orders
        </button>
      </h2>
    </div>
    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
      <div class="card-body">

          <% @my_orders.each do |order| %>

            <div class="card">
              <h5 class="card-header">Order #<%= order.id %></h5>
              <div class="card-body">
                <h5 class="card-title">Pastel: <%= order.pastel.name%></h5>
                <p class="card-text">
                  <label>Order created at:</label> <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %><br>
                  <label>Quantity:</label> <%= order.quantity %><br>
                  <label>Price:</label> <%= order.pastel.price %><br>
                </p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
                <%= link_to "Delete", order_path(order.id), method: :delete, confirm: "Positive?", title: "Delete" %>
              </div>
            </div>
            <br>
          <% end %>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-header" id="headingThree">
      <h2 class="mb-0">
        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
          <i class="fas fa-caret-down"></i> Orders to me
        </button>
      </h2>
    </div>
    <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
      <div class="card-body">

          <% @orders_to_me.each do |order| %>

            <div class="card">
              <h5 class="card-header">Order #<%= order.id %></h5>
              <div class="card-body">
                <h5 class="card-title">Pastel: <%= order.pastel.name%></h5>
                <p class="card-text">
                  <label>Order created at:</label> <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %><br>
                  <label>Quantity:</label> <%= order.quantity %><br>
                  <label>Price:</label> <%= order.pastel.price %><br>
                  <label>Buyer:</label> <%= order.user.first_name %> <%= order.user.last_name %><br>
                </p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
              </div>
            </div>
            <br>
          <% end %>

      </div>
    </div>
  </div>


  <div class="card">
    <div class="card-header" id="headingFour">
      <h2 class="mb-0">
        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
          <i class="fas fa-caret-down"></i> Pastels
        </button>
      </h2>
    </div>
    <div id="collapseFour" class="collapse" aria-labelledby="headingFour" data-parent="#accordionExample">
      <div class="card-body">
        <!-- old -->
        <div class="container">
          <h1 class="text-center">My Pastels</h1>
          <div class="row d-flex justify-content-center">
            <div class="cards">
              <% @my_pastels.each do |pastel| %>
              <div class="card m-2" style="width: 18rem;">
                <%= link_to pastel, class: 'btn' do %>
                <img class="card-img-top" src="https://source.unsplash.com/1600x900/?pastel-de-nata" alt="Card image cap">
                <% end %>
                <div class="card-body">
                  <!-- <h5 class="card-title"><%= pastel.name %></h5> -->
                  <div class="d-flex justify-content-between">
                    <p class="card-text"><%= pastel.description %></p>
                    <p class="card-text float-right">â‚¬ <%= pastel.price %></p>
                  </div>
                </div>
                <div class="d-flex justify-content-between align-items-center m-2">
                  <%= link_to 'Details', pastel, class: 'btn btn-outline-secondary' %>
                  <!-- modal button -->
                  <%= link_to pastel_path(pastel),  {'data-toggle' =>  "modal", 'data-target' => '#orderModalCenter', class: 'btn btn-sm btn-outline-secondary my-0'} do %>
                  <i class="fas fa-plus mr-1"></i>Order me!
                  <% end %>
                </div>
              </div>
            <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>





<!-- Modal -->
<div class="modal fade" id="orderModalCenter" tabindex="-1" role="dialog" aria-labelledby="orderModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="orderModalLongTitle">Here is your order</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        this is an order...
      </div>
    </div>
  </div>
</div>
